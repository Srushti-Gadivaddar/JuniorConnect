<% layout("/layouts/boilerplate") %>
<style>.card-auth{max-width:520px;margin:40px auto;padding:28px;border-radius:12px;background:var(--card);box-shadow:0 10px 30px rgba(0,0,0,0.06)} .small-note{color:var(--text);opacity:.8}</style>

<div class="card-auth">
  <h3>OTP Verification</h3>
  <% if (typeof info !== 'undefined') { %>
    <div class="alert alert-info"><%= info %></div>
  <% } %>
  <% if (typeof error !== 'undefined') { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>
  <% if (typeof success !== 'undefined') { %>
    <div class="alert alert-success"><%= success %></div>
  <% } %>

  <form action="/verify-otp" method="POST">
    <input type="hidden" name="username" value="<%= username || '' %>">
    <div class="mb-3">
      <label>Enter OTP</label>
      <input type="text" name="otp" maxlength="6" class="form-control" placeholder="6-digit code" required>
    </div>
    <button class="btn btn-warning w-100">Verify OTP</button>
  </form>
  <div class="mt-3 small-note">Didn't get it? Check spam or try again in a few minutes.</div>
</div>
