<% layout("/layouts/boilerplate") %>
<style>
:root {
  --bg: #f5f7fb;
  --text: #0b2347;
  --card: #ffffff;
  --btn: #2f5589;
  --btn-text: #ffffff;
  --accent: #1B3C53;
}

[data-theme="dark"] {
  --bg: #0f172a;
  --text: #e2e8f0;
  --card: #1e293b;
  --btn: #334155;
  --btn-text: #e2e8f0;
  --accent: #2b4d63;
}

body {
  margin: 0;
  font-family: Arial, sans-serif;
  background: var(--bg);
  color: var(--text);
}

/* HERO SECTION */
.hero {
  max-width: 1100px;
  margin: 50px auto;
  padding: 100px 40px;
  background: var(--card);
  border-radius: 25px;
  text-align: center;
}

.hero h1 {
  font-size: 58px;
  font-weight: 800;
  margin-bottom: 15px;
}

.hero p {
  font-size: 22px;
  max-width: 650px;
  margin: auto;
  opacity: 0.9;
  margin-bottom: 30px;
}

.btn-main {
  background: var(--btn);
  color: var(--btn-text);
  padding: 14px 30px;
  border-radius: 12px;
  border: none;
  font-size: 20px;
  cursor: pointer;
  transition: 0.2s;
}

.btn-main:hover {
  transform: translateY(-3px);
}

/* FEATURES */
.features {
  max-width: 1200px;
  margin: 70px auto;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 25px;
}

.feature-box {
  background: var(--card);
  padding: 30px;
  border-radius: 18px;
  text-align: center;
  box-shadow: 0 3px 8px rgba(0,0,0,0.08);
}

.feature-box h3 {
  margin-bottom: 10px;
}

/* CONTACT */
#contact {
  background: var(--accent);
  color: white;
  padding: 60px 20px;
  text-align: center;
  margin-top: 80px;
  border-radius: 20px;
  max-width: 1200px;
  margin-left: auto;
  margin-right: auto;
}

/* SIDE PANEL */
.side-panel {
  width: 260px;
  position: fixed;
  right: -260px;
  top: 0;
  height: 100%;
  background: var(--card);
  padding: 40px 20px;
  transition: 0.3s;
  box-shadow: -2px 0 10px rgba(0,0,0,0.1);
  z-index: 999;
}

.side-panel a {
  display: block;
  margin-bottom: 20px;
  color: var(--text);
  font-size: 18px;
  text-decoration: none;
}

/* RESPONSIVE STYLES */
@media (max-width: 992px) {
  .hero {
    padding: 80px 30px;
  }
  .hero h1 {
    font-size: 48px;
  }
  .hero p {
    font-size: 20px;
  }
  .features {
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }
}

@media (max-width: 768px) {
  .hero {
    padding: 60px 20px;
  }
  .hero h1 {
    font-size: 36px;
  }
  .hero p {
    font-size: 18px;
  }
  .btn-main {
    font-size: 18px;
    padding: 12px 25px;
  }
  .features {
    grid-template-columns: 1fr;
    gap: 20px;
    padding: 0 10px;
  }
  .feature-box {
    padding: 25px 20px;
  }
  #contact {
    padding: 40px 15px;
  }
  .side-panel {
    width: 220px;
    padding: 30px 15px;
  }
  .side-panel a {
    font-size: 16px;
    margin-bottom: 15px;
  }
}

@media (max-width: 480px) {
  .hero {
    padding: 40px 15px;
  }
  .hero h1 {
    font-size: 28px;
  }
  .hero p {
    font-size: 16px;
  }
  .btn-main {
    font-size: 16px;
    padding: 10px 20px;
  }
  .feature-box {
    padding: 20px 15px;
  }
  #contact {
    padding: 30px 15px;
  }
}
</style>

<body>

  <!-- HERO (NO IMAGES) -->
  <div class="hero">
    <h1>Welcome to Junior Connect</h1>
    <p>A growing student community where you can ask questions, share knowledge, explore connections, and build your network.</p>
    <button class="btn-main"><a href="/signup" style="text-decoration: none; color: white">Get Started</a></button>
  </div>

  <!-- FEATURES -->
  <div class="features">
    <div class="feature-box">
      <h3>Ask Questions</h3>
      <p>Get answers from students across colleges and branches.</p>
    </div>

    <div class="feature-box">
      <h3>Direct Messages</h3>
      <p>Chat privately with friends and peers anytime.</p>
    </div>

    <div class="feature-box">
      <h3>Create Posts</h3>
      <p>Share updates, achievements, and important info.</p>
    </div>
  </div>

  <!-- CONTACT -->
  <div id="contact">
    <h2>Contact Us</h2>
    <p>Have questions? Need help? Weâ€™re here for you.</p>
    <p>Email: support@juniorconnect.com</p>
  </div>

  <!-- SIDE PANEL -->
  <div class="side-panel" id="sidePanel">

    <a href="/profiles/new">Create Profile</a>
    <a href="/questions/new">Ask a Questions</a>
    <a href="#contact">Contact Us</a>

    <% if (!currentUser) { %>
      <a href="/login">Login</a>
      <a href="/signup">Signup</a>
    <% } else { %>
      <a href="/logout">Logout</a>
    <% } %>

  </div>

  <script>
    function openMenu() {
      document.getElementById("sidePanel").style.right = "0";
    }

    function closeMenu() {
      document.getElementById("sidePanel").style.right = "-260px";
    }

    document.addEventListener("click", (e) => {
      if (!document.getElementById("sidePanel").contains(e.target) &&
          !e.target.classList.contains("menu-btn")) {
        closeMenu();
      }
    });

    function toggleTheme() {
      const current = document.body.getAttribute("data-theme");
      document.body.setAttribute("data-theme", current === "dark" ? "light" : "dark");
    }
  </script>
</body>
